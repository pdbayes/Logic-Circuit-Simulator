{
  "version": "0.5.0",
  "main": "electron-main.js",
  "dependencies": {
    "@popperjs/core": "^2.9.1",
    "bezier-js": "^6.1.0",
    "dialog-polyfill": "^0.5.6",
    "electron": "^32.1.2",
    "file-saver": "^2.0.5",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.16",
    "json5": "^2.2.3",
    "lz-string": "^1.4.4",
    "png-metadata-writer": "^1.0.1",
    "qrcode": "^1.5.0"
  },
  "devDependencies": {
    "@types/bezier-js": "^4.1.0",
    "@types/file-saver": "^2.0.5",
    "@types/jquery": "^3.5.14",
    "@types/lz-string": "^1.3.34",
    "@types/qrcode": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "esbuild": "^0.17.17",
    "eslint": "^7.32.0",
    "npm-watch": "^0.9.0",
    "ts-arithmetic": "^0.1.1",
    "ts-loader": "^8.0.18",
    "type-coverage": "^2.17.2",
    "typescript": "^5.0.3",
    "typescript-coverage-report": "^0.5.1"
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint . --ext .ts",
    "lint-watch": "npm-watch lint",
    "bundle": "./tools/bundle.js --dev --dist",
    "bundle-watch": "npm-watch bundle",
    "server": "./tools/local_server.py 8088",
    "deploy-all": "./deploy-jpp.sh && ./deploy-modulo.sh && ./deploy-modulo-dev.sh",
    "electron": "electron ."
  },
  "watch": {
    "bundle": {
      "patterns": [
        "simulator",
        "package.json",
        "tools"
      ],
      "ignore": "simulator/lib",
      "extensions": "ts,js,html,css,svg,json"
    },
    "lint": {
      "patterns": [
        "simulator",
        ".eslintrc.json"
      ],
      "extensions": "ts,json"
    }
  }
}
