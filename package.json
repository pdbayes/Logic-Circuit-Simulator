{
  "version": "0.5.0",
  "main": "electron-main.js",
  "dependencies": {
    "@popperjs/core": "^2.9.1",
    "bezier-js": "^6.1.0",
    "canvas2svg": "^1.0.16",
    "dialog-polyfill": "^0.5.6",
    "electron": "^21.1.1",
    "fp-ts": "^2.9.5",
    "io-ts": "^2.2.16",
    "lz-string": "^1.4.4",
    "png-metadata-writer": "^1.0.1",
    "qrcode": "^1.5.0"
  },
  "devDependencies": {
    "@types/bezier-js": "^4.1.0",
    "@types/jquery": "^3.5.14",
    "@types/lz-string": "^1.3.34",
    "@types/qrcode": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "esbuild": "^0.17.11",
    "eslint": "^7.32.0",
    "npm-watch": "^0.9.0",
    "ts-arithmetic": "^0.1.1",
    "ts-loader": "^8.0.18",
    "type-coverage": "^2.17.2",
    "typescript": "^4.9.5",
    "typescript-coverage-report": "^0.5.1"
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint . --ext .ts",
    "lint-watch": "npm-watch lint",
    "bundle": "esbuild --minify --bundle --sourcemap --loader:.html=text  --loader:.css=text --loader:.icon.svg=text --loader:.svg=text simulator/src/LogicEditor.ts --outfile=simulator/lib/bundle.js && tools/insert_md5_into_index.sh",
    "bundle-watch": "npm-watch bundle",
    "server": "./tools/local_server.py 8088",
    "deploy-all": "./deploy-jpp.sh && ./deploy-modulo.sh && ./deploy-modulo-dev.sh",
    "electron": "electron ."
  },
  "watch": {
    "bundle": {
      "patterns": [
        "simulator", "package.json"
      ],
      "extensions": "ts,html,css,svg,json"
    },
    "lint": {
      "patterns": [
        "simulator"
      ],
      "extensions": "ts"
    }
  }
}
